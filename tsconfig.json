{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2020"],
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2020",
    "declaration": true,
    "noUnusedLocals": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "*": ["./src/*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./src/", "./node_modules/@types"],
  "exclude": ["**/*.js", "**/*.test.ts", "./dist"]
}
